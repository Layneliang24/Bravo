# 生产环境配置

# Django 设置
DEBUG=False
SECRET_KEY=your-production-secret-key-here
ALLOWED_HOSTS=bravo.com,api.bravo.com,www.bravo.com

# 数据库配置
DATABASE_URL=mysql://bravo_user:bravo_password@prod-db:3306/bravo_production

# Redis 配置
REDIS_URL=redis://prod-redis:6379/0

# 邮件配置
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@bravo.com
EMAIL_HOST_PASSWORD=your-email-password

# 第三方服务配置
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 前端配置
VITE_API_URL=https://api.bravo.com
VITE_APP_TITLE=Bravo

# 日志配置
LOG_LEVEL=WARNING
LOG_FILE=logs/bravo-production.log

# 监控配置
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# 性能监控
NEW_RELIC_LICENSE_KEY=your-newrelic-key
NEW_RELIC_APP_NAME=Bravo Production

# 安全配置
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# CDN 配置
STATIC_URL=https://cdn.bravo.com/static/
MEDIA_URL=https://cdn.bravo.com/media/

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_ENTRIES=1000

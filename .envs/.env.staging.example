# 预发布环境配置

# Django 设置
DEBUG=False
SECRET_KEY=your-staging-secret-key-here
ALLOWED_HOSTS=staging.bravo.com,staging-api.bravo.com

# 数据库配置
DATABASE_URL=mysql://bravo_user:bravo_password@staging-db:3306/bravo_staging

# Redis 配置
REDIS_URL=redis://staging-redis:6379/0

# 邮件配置
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=staging@bravo.com
EMAIL_HOST_PASSWORD=your-email-password

# 第三方服务配置
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 前端配置
VITE_API_URL=https://staging-api.bravo.com
VITE_APP_TITLE=Bravo Staging

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/bravo-staging.log

# 监控配置
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=staging

# 性能监控
NEW_RELIC_LICENSE_KEY=your-newrelic-key
NEW_RELIC_APP_NAME=Bravo Staging

# 安全配置
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

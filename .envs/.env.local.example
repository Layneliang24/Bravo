# 本地开发环境配置

# Django 设置
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# 数据库配置
DATABASE_URL=postgresql://bravo_user:bravo_password@localhost:5432/bravo_local

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# 邮件配置
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# 第三方服务配置
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 前端配置
VITE_API_URL=http://localhost:8000
VITE_APP_TITLE=Bravo Local

# 日志配置
LOG_LEVEL=DEBUG
LOG_FILE=logs/bravo.log

# 测试配置
TEST_DATABASE_URL=postgresql://bravo_user:bravo_password@localhost:5432/bravo_test

# 开发工具配置
DJANGO_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS=True

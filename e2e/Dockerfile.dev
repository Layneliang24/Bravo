# E2E测试环境 Dockerfile
FROM node:18-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖（Playwright需要）
RUN apt-get update && apt-get install -y \
    wget \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libexpat1 \
    libfontconfig1 \
    libgbm1 \
    libgcc1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libstdc++6 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxi6 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    lsb-release \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# 配置npm国内源
RUN echo "📦 配置npm国内源..." && \
    npm config set registry https://registry.npmmirror.com && \
    npm config set maxsockets 20 && \
    npm config set fetch-retries 3 && \
    npm config set fetch-retry-mintimeout 10000 && \
    npm config set fetch-retry-maxtimeout 60000

# 复制 package 文件
COPY package*.json ./

# 安装依赖（使用npm install因为e2e没有package-lock.json）
RUN npm install --prefer-offline --no-audit

# 安装Playwright浏览器
RUN npx playwright install chromium --with-deps

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 9323

# 启动测试
CMD ["npm", "run", "test"]

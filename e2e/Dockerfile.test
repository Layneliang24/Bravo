# E2E测试环境 Dockerfile
FROM node:20-slim

# 设置工作目录到e2e目录
WORKDIR /app/e2e

# 安装系统依赖（Playwright需要）+ Python
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    wget \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libexpat1 \
    libfontconfig1 \
    libgbm1 \
    libgcc1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libstdc++6 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxi6 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    lsb-release \
    xdg-utils \
    curl \
    && ln -s /usr/bin/python3 /usr/bin/python \
    && rm -rf /var/lib/apt/lists/*

# 设置环境变量
ENV CI=true
ENV NPM_CONFIG_REGISTRY=https://registry.npmmirror.com/

# 1) 独立锁文件 + 禁用 workspace hoist
COPY package*.json ./
RUN echo 'workspace-root=false' > .npmrc

# 2) 严格可重复安装
RUN npm config set registry https://registry.npmmirror.com/ && \
    npm config set fetch-timeout 300000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm config set fetch-retry-mintimeout 10000 && \
    npm ci

# 3) 浏览器也装进 /app，避免挂在 $HOME
ENV PLAYWRIGHT_BROWSERS_PATH=/app/ms-playwright
RUN npx playwright install

# 4) 自检验证
RUN npx playwright --version && npm list @playwright/test

COPY . .

# 健康检查 - 使用npm script验证安装
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD npm list @playwright/test > /dev/null 2>&1 || exit 1

# 默认命令 - 使用npm script确保正确的@playwright/test包
CMD ["npm", "run", "test"]

{
  "ci": {
    "collect": {
      "url": ["http://localhost:3001/test.html"],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage --disable-gpu --disable-web-security --disable-features=VizDisplayCompositor --headless --disable-background-timer-throttling --disable-renderer-backgrounding --disable-backgrounding-occluded-windows",
        "maxWaitForFcp": 45000,
        "maxWaitForLoad": 90000,
        "pauseAfterFcpMs": 1000,
        "pauseAfterLoadMs": 1000,
        "networkQuietThresholdMs": 1000,
        "cpuQuietThresholdMs": 1000,
        "throttlingMethod": "simulate",
        "throttling": {
          "rttMs": 150,
          "throughputKbps": 1638,
          "cpuSlowdownMultiplier": 4
        },
        "emulatedFormFactor": "desktop",
        "screenEmulation": {
          "mobile": false,
          "width": 1350,
          "height": 940,
          "deviceScaleFactor": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.2}],
        "categories:accessibility": ["warn", {"minScore": 0.7}],
        "categories:best-practices": ["warn", {"minScore": 0.7}],
        "categories:seo": ["warn", {"minScore": 0.7}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}

{
  "mcpServers": {
    "taskmaster": {
      "command": "npx",
      "args": [
        "-y",
        "task-master-ai",
        "mcp"
      ],
      "env": {
        "CHENMOAI_API_KEY": "sk-chhLY3oOJJIWKM3dDaIIrhrFpX7uOrmT2h8jzvNt2YrtEwzV",
        "CHENMOAI_BASE_URL": "https://api.chenmoai.cn/v1",
        "SILICONFLOW_API_KEY": "sk-qcxlwgdycvwptcaipxbiomxxfdsalmtiwvktcravdcnfauit",
        "SILICONFLOW_BASE_URL": "https://api.siliconflow.cn/v1",
        "OPENAI_API_KEY": "sk-chhLY3oOJJIWKM3dDaIIrhrFpX7uOrmT2h8jzvNt2YrtEwzV",
        "OPENAI_BASE_URL": "https://api.chenmoai.cn/v1",
        "TASK_MASTER_WRAPPER": "${workspaceFolder}/scripts/task-master-wrapper.sh"
      }
    }
  },
  "tools": {
    "code_generator": {
      "description": "生成 Django 和 Vue 代码",
      "parameters": {
        "type": {
          "type": "string",
          "enum": [
            "django_model",
            "vue_component",
            "api_endpoint"
          ],
          "description": "代码生成类型"
        },
        "name": {
          "type": "string",
          "description": "生成代码的名称"
        },
        "options": {
          "type": "object",
          "description": "生成选项"
        }
      }
    },
    "test_generator": {
      "description": "生成测试用例",
      "parameters": {
        "file_path": {
          "type": "string",
          "description": "要生成测试的文件路径"
        },
        "test_type": {
          "type": "string",
          "enum": [
            "unit",
            "integration",
            "e2e"
          ],
          "description": "测试类型"
        }
      }
    },
    "security_scan": {
      "description": "执行安全扫描",
      "parameters": {
        "scan_type": {
          "type": "string",
          "enum": [
            "static",
            "dependency",
            "runtime"
          ],
          "description": "扫描类型"
        },
        "target": {
          "type": "string",
          "description": "扫描目标"
        }
      }
    },
    "doc_writer": {
      "description": "生成文档到指定目录",
      "parameters": {
        "doc_type": {
          "type": "string",
          "enum": [
            "product",
            "guideline",
            "test_report",
            "operate"
          ],
          "description": "文档类型，决定放置的子目录"
        },
        "title": {
          "type": "string",
          "description": "文档标题"
        },
        "content": {
          "type": "string",
          "description": "文档内容"
        }
      }
    }
  }
}

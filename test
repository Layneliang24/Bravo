#!/bin/bash
# 一键本地测试快捷命令 - 直接调用防篡改脚本
cd "$(dirname "$0")"

# 🛡️ 调用防篡改的本地测试通行证脚本
GOLDEN_SCRIPT="scripts-golden/local_test_passport.py"

if [ ! -f "$GOLDEN_SCRIPT" ]; then
    echo "❌ 防篡改通行证脚本不存在: $GOLDEN_SCRIPT"
    exit 1
fi

echo "🧪 调用防篡改本地测试系统..."
echo "🎯 执行四层验证：语法→环境→功能→差异"
python "$GOLDEN_SCRIPT" "$@"
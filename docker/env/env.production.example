# Bravo 生产环境配置示例
# 复制此文件为 .env.production 并修改为实际值
# 使用方式: docker-compose --env-file .env.production -f docker-compose.production.yml up -d

# 数据库配置
DB_ROOT_PASSWORD=secure_root_password_change_me
DB_NAME=bravo_production
DB_USER=bravo
DB_PASSWORD=secure_db_password_change_me
DB_HOST=mysql
DB_PORT=3306

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Django配置
DJANGO_SECRET_KEY=generate_a_secure_secret_key_here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_SETTINGS_MODULE=bravo.settings.production

# API配置
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# 邮件配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_USE_TLS=True

# 对象存储配置（如使用MinIO或S3）
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=bravo-media
AWS_S3_REGION_NAME=us-east-1

# 监控配置
SENTRY_DSN=

# 其他配置
TZ=Asia/Shanghai

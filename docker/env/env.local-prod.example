# Bravo 本地生产环境测试配置示例
# 用于在本地测试生产配置
# 复制此文件为 .env.local-prod 并修改为实际值
# 使用方式: docker-compose --env-file .env.local-prod -f docker-compose.production.yml up

# 数据库配置
DB_ROOT_PASSWORD=local_root_password_123
DB_NAME=bravo_production_test
DB_USER=bravo
DB_PASSWORD=local_test_password_123
DB_HOST=mysql
DB_PORT=3306

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Django配置
DJANGO_SECRET_KEY=local-test-secret-key-not-for-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=bravo.settings.production

# API配置
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# 邮件配置（使用Mailhog）
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False

# 对象存储配置（使用MinIO）
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_STORAGE_BUCKET_NAME=bravo-media
AWS_S3_ENDPOINT_URL=http://localhost:9000

# 监控配置
SENTRY_DSN=

# 其他配置
TZ=Asia/Shanghai

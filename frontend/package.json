{
  "name": "bravo-frontend",
  "version": "1.0.0",
  "description": "Bravo 前端应用",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "jest --config jest.config.js",
    "test:component": "vitest --config vitest.config.ts",
    "test:coverage-check": "jest --config jest.config.coverage.js --passWithNoTests",
    "test:coverage-verify": "node tests/verify-coverage.js",
    "feature:map": "node ../scripts/buildFeatureMap.js",
    "feature:uncovered": "node -e \"const report = require('./feature-test-map.json'); report.uncovered.forEach(f => console.log(`❌ ${f.id}: ${f.desc}`));\"",
    "feature:validate": "VALIDATE_FEATURE_COVERAGE=true npm run test:coverage",
    "test:feature-mapping": "ENFORCE_FEATURE_MAPPING=true npm test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --write src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "axios": "^1.6.2",
    "element-plus": "^2.4.4",
    "@element-plus/icons-vue": "^2.1.0",
    "dayjs": "^1.11.10",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.22",
    "typescript": "^5.2.2",
    "@types/node": "^20.9.0",
    "@types/lodash-es": "^4.17.12",
    "@types/nprogress": "^0.2.3",
    "vitest": "^0.34.6",
    "@vue/test-utils": "^2.4.2",
    "jsdom": "^22.1.0",
    "@vitest/ui": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint-plugin-vue": "^9.18.1",
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "@storybook/vue3": "^7.5.3",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/blocks": "^7.5.3",
    "@storybook/test": "^7.5.3",
    "storybook": "^7.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}

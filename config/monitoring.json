{
  "services": {
    "backend": {
      "url": "http://localhost:8000/health/",
      "timeout": 10,
      "critical_threshold": 5000,
      "description": "Django 后端 API 服务"
    },
    "frontend": {
      "url": "http://localhost:3000",
      "timeout": 5,
      "critical_threshold": 3000,
      "description": "Vue.js 前端应用"
    },
    "mysql": {
      "host": "localhost",
      "port": 3306,
      "timeout": 3,
      "description": "MySQL 数据库服务"
    },
    "redis": {
      "host": "localhost",
      "port": 6379,
      "timeout": 3,
      "description": "Redis 缓存服务"
    },
    "nginx": {
      "url": "http://localhost:80",
      "timeout": 5,
      "critical_threshold": 2000,
      "description": "Nginx 反向代理"
    }
  },
  "thresholds": {
    "cpu_warning": 70,
    "cpu_critical": 90,
    "memory_warning": 80,
    "memory_critical": 95,
    "disk_warning": 85,
    "disk_critical": 95,
    "response_time_warning": 2000,
    "response_time_critical": 5000
  },
  "alerts": {
    "slack_webhook": null,
    "email_recipients": [],
    "enable_auto_recovery": true,
    "alert_cooldown": 300,
    "max_recovery_attempts": 3
  },
  "logging": {
    "level": "INFO",
    "file": "logs/health_monitor.log",
    "max_size": "10MB",
    "backup_count": 5
  },
  "monitoring": {
    "check_interval": 60,
    "metric_retention_days": 7,
    "report_retention_days": 30
  }
}

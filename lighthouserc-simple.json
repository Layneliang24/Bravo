{
  "ci": {
    "collect": {
      "url": ["http://localhost:3001/test.html"],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage --disable-gpu --disable-web-security",
        "maxWaitForFcp": 15000,
        "maxWaitForLoad": 30000
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.1}],
        "categories:accessibility": ["warn", {"minScore": 0.5}],
        "categories:best-practices": ["warn", {"minScore": 0.5}],
        "categories:seo": ["warn", {"minScore": 0.5}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}

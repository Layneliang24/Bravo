[MASTER]
ignore=CVS
init-hook='import sys; sys.path.append(".")'

[MESSAGES CONTROL]
disable=C0114,C0116,R0903,W0613,R0801,C0103,R0913,W0212,C0415
enable=W0611,W0612,C0411,C0412,W0622,W0621

[REPORTS]
output-format=text
reports=no

[VARIABLES]
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[BASIC]
good-names=i,j,k,ex,Run,_,id,db,qs

[FORMAT]
max-line-length=88
indent-string='    '

[DESIGN]
max-args=8
max-locals=12
max-returns=5
max-branches=10
max-statements=40
max-parents=5
max-attributes=10
max-public-methods=15
max-bool-expr=4
min-public-methods=1
max-complexity=10

[IMPORTS]
import-graph=
ext-import-graph=
int-import-graph=
known-standard-library=
known-third-party=django,rest_framework,pytest,celery,redis

[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    .tox,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    htmlcov,
    .coverage,
    .mypy_cache,
    ../scripts,
    ../scripts-golden
per-file-ignores =
    */migrations/*:E501
    */settings/*:E501,F401,F403,F405
    */tests/*:F401,F403
    manage.py:E501
    */wsgi.py:F401
    */asgi.py:F401

# 命名规则检查
ignore-names =
    test_*,
    *_test,
    Test*,
    setUp,
    tearDown

# 启用命名规则检查
select = E,F,W,C,N

# 命名约定
function-name-hint = [a-z_][a-z0-9_]{2,30}$
variable-name-hint = [a-z_][a-z0-9_]{2,30}$
const-name-hint = [A-Z_][A-Z0-9_]*$
attr-name-hint = [a-z_][a-z0-9_]{2,30}$
argument-name-hint = [a-z_][a-z0-9_]{2,30}$
class-attribute-name-hint = [a-z_][a-z0-9_]{2,30}$
class-name-hint = [A-Z_][a-zA-Z0-9]+$
module-name-hint = [a-z_][a-z0-9_]*$

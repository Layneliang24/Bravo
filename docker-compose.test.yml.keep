# 测试环境 Docker 编排模板

version: '3.8'

services:
  # 测试数据库
  mysql-test:
    image: mysql:8.0
    environment:
      MYSQL_DATABASE: bravo_test
      MYSQL_USER: bravo_user
      MYSQL_PASSWORD: bravo_password
      MYSQL_ROOT_PASSWORD: rootpassword
    ports:
      - "3307:3306"
    tmpfs:
      - /var/lib/mysql

  # 测试 Redis
  redis-test:
    image: redis:7-alpine
    ports:
      - "6380:6379"
    tmpfs:
      - /data

  # 后端测试
  backend-test:
    build:
      context: ./backend
      dockerfile: Dockerfile
    environment:
      - DJANGO_SETTINGS_MODULE=bravo.settings.test
      - DATABASE_URL=mysql://bravo_user:bravo_password@mysql-test:3306/bravo_test
      - REDIS_URL=redis://redis-test:6379/0
    volumes:
      - ./backend:/app
    depends_on:
      - mysql-test
      - redis-test
    command: pytest

  # 前端测试
  frontend-test:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    environment:
      - VITE_API_URL=http://localhost:8000
    volumes:
      - ./frontend:/app
      - /app/node_modules
    command: npm run test

  # E2E 测试
  e2e-test:
    build:
      context: ./e2e
      dockerfile: Dockerfile
    environment:
      - BASE_URL=http://frontend-test:3000
      - API_URL=http://backend-test:8000
    volumes:
      - ./e2e:/app
    depends_on:
      - backend-test
      - frontend-test
    command: npm run test
